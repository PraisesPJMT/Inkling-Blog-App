    <div class="post-box">
    <h2><%= @post.title %><span class="author"> by <%= @user.name %></span></h2>
    <div class="user-post-count">
        <span>Comments: <%= @post.comments_counter %></span>
        <span class="seperator">||</span>
        <span>Likes: <%= @post.likes_counter %></span>
    </div>
    <p><%= @post.text %></p>
    <div class="comment-box">
        <% @post.comments.each do |comment| %>
            <div class="comment">
                <img class="comment-avatar" src=<%= User.find(comment.author_id).photo %> alt=<%= User.find(comment.author_id).name %>>
                <div class="comment-card">
                    <p class="comment-details">
                        <span><%= User.find(comment.author_id).name %></span>
                        <span  class="seperator">||</span>
                        <span><%= comment.created_at %></span>
                    </p>
                    <p><%= comment.text %></p>
                </div>
            </div>
        <% end %>
    </div>
</div>
