<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="up-field">
    <%= f.label :name, "Name:", class: "label" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="up-field">
    <%= f.label :bio, "Bio:", class: "label" %><br />
    <%= f.text_area :bio, autofocus: true, rows: "5", class: "input" %>
  </div>

  <div class="up-field">
    <%= f.label :email, "Email:", class: "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <i>(leave blank if you don't want to change it)</i>
  <div class="up-field">
    <%= f.label :password, "Password:", class: "label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
  </div>
  <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> characters minimum</em>
  <% end %>

  <div class="up-field">
    <%= f.label :password_confirmation, "Password confirmation:", class: "label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
  </div>

  <i>(we need your current password to confirm your changes)</i>
  <div class="up-field">
    <%= f.label :current_password, "Current confirmation:", class: "label"  %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "sign-btn sign-in-btn" %>
  </div>
<% end %>

<h3 class="centered">Cancel my account</h3>

<p class="centered">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "sign-btn delete-btn"  %></p>

